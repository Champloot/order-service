# Database
POSTGRES_URL=postgres://user:password@localhost:5432/orderservice?sslmode=disable
DB_MAX_CONNS=20
DB_MIN_CONNS=5
DB_MAX_CONN_LIFETIME=1h
DB_MAX_CONN_IDLE_TIME=30m
DB_HEALTH_CHECK_PERIOD=1m

# Redis
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
CACHE_TTL=24h

# Kafka
KAFKA_BROKERS=localhost:9092
KAFKA_TOPIC=orders
KAFKA_GROUP_ID=order-service

# HTTP Server
HTTP_ADDR=:8080

# Consumer settings
CONSUMER_TIMEOUT=10s
CONSUMER_MIN_BYTES=10240
CONSUMER_MAX_BYTES=10485760
CONSUMER_MAX_WAIT=1s
CONSUMER_RETRY_DELAY=5s

# Application
APP_ENV=development
LOG_LEVEL=info
